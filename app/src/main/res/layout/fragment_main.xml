<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blue"
    tools:context=".presentation.main.fragment.MainFragment">



    <LinearLayout
        android:id="@+id/linear_hor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/back_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile_man"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
        />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_gravity="center"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/plusjakartasans_regular"
               android:textColor="@color/white"
               android:textSize="24sp"
               android:layout_marginTop="25dp"
               android:layout_marginStart="10dp"
               android:text="@string/hello_amir_alimbayev"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/plusjakartasans_regular"
               android:textColor="@color/white"
               android:textSize="16sp"
               android:layout_marginStart="13dp"
               android:layout_marginBottom="5dp"
               android:text="@string/amiralimbayevo_gmail_com"
               android:layout_marginTop="10dp" />
       </LinearLayout>


    </LinearLayout>



    <ImageView
        android:id="@+id/pulse_one"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="264dp"
        android:src="@drawable/suspect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/map_news"
        android:layout_marginEnd="5dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/world_news"
        app:layout_constraintEnd_toStartOf="@+id/pulse_one"
        app:layout_constraintTop_toTopOf="@+id/pulse_one" />


    <ImageView
        android:id="@+id/map_articles"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/article"
        app:layout_constraintTop_toTopOf="@id/pulse_one"
        app:layout_constraintStart_toEndOf="@id/pulse_one"
         />

    <ImageView
        android:id="@+id/map_map"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/map_11"
        app:layout_constraintBottom_toTopOf="@id/pulse_one"
        app:layout_constraintStart_toStartOf="@id/pulse_one"
        app:layout_constraintEnd_toEndOf="@id/pulse_one"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/map_ai"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/artificial_intelligence"
        app:layout_constraintBottom_toBottomOf="@id/pulse_one"
        app:layout_constraintEnd_toStartOf="@id/pulse_one"
        />

    <ImageView
        android:id="@+id/map_call_e"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/emergency_call"
        app:layout_constraintStart_toEndOf="@id/pulse_one"
        app:layout_constraintBottom_toBottomOf="@id/pulse_one"
        />


    <ImageView
        android:id="@+id/map_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/user_21"
        app:layout_constraintTop_toBottomOf="@id/pulse_one"
        app:layout_constraintStart_toStartOf="@id/pulse_one"
        app:layout_constraintEnd_toEndOf="@id/pulse_one"
        android:layout_marginTop="15dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>